{
    "name": "swejzi/qr-platba",
    "type": "library",
    "description": "Generování QR plateb v PHP.",
    "keywords": [
        "php",
        "qr",
        "platba"
    ],
    "homepage": "https://github.com/Swejzi/QRPlatba",
    "license": "MIT",
    "authors": [
        {
            "name": "Dennis Fridrich",
            "email": "fridrich.dennis@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3||^8.0",
        "endroid/qr-code": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Swejzi\\QRPlatba\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "test": [
            "@phpunit"
        ],
        "phpunit": "bin/phpunit"
    }
}
